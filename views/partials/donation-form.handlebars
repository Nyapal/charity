<form>
  <fieldset>
    <legend>Add a Donation</legend>
    <!-- TITLE -->
    <div class="form-group">
      <label for="donation-date">Date</label><br>
      <input class="form-control"
        id="donation-date"
        type="date"
        name="donation-date"/>
    </div>

    <!-- DESCRIPTION -->
    <div class="form-group">
      <label for="donation-amount">Amount</label><br>
      <textarea class="form-control"
      id="donation-amount"
      name="amount"
      rows="4"
      placeholder="Donation Amount"/></textarea>
    </div>
  </fieldset>

  <!-- BUTTON -->
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Add Donation</button>
  </div>
</form>
